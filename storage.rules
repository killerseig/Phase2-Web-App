rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read their own daily log photos
    match /daily-logs/{logId}/{allPaths=**} {
      // Only signed-in users can read/write
      allow read, write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
