rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------------- helpers ---------------- */
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isDraft() {
      return resource.data.status == 'draft';
    }

    /* ---------------- users ---------------- */
    match /users/{uid} {
      allow read: if signedIn();
      // Allow users to create their own profile doc on sign-up
      allow create: if signedIn() && request.auth.uid == uid;
      // Allow users to update their own profile, or admins to update any user
      allow update: if signedIn() && (request.auth.uid == uid || isAdmin());
      // Only admins can delete users
      allow delete: if isAdmin();

      // Mirror docs for job membership (users/{uid}/jobs/{jobId})
      match /jobs/{jobId} {
        allow read: if signedIn();
        allow write: if isAdmin();
      }
    }

    /* ---------------- jobs ---------------- */
    match /jobs/{jobId} {
      allow read: if signedIn();
      allow create, update, delete: if signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      /* -------- job roster (employees) -------- */
      match /roster/{employeeId} {
        allow read: if signedIn();
        allow create, update, delete: if isAdmin();
      }

      /* -------- job shop orders -------- */
      match /shop_orders/{orderId} {
        allow read: if signedIn();
        allow create, update, delete: if isAdmin();
      }

      /* -------- job daily logs -------- */
      match /dailyLogs/{logId} {
        allow get, list, read: if signedIn();

        allow create: if signedIn() && request.resource.data.uid == request.auth.uid &&
                      request.resource.data.status == 'draft';

        allow update: if signedIn() && resource.data.uid == request.auth.uid && 
                      resource.data.status == 'draft';

        allow delete: if isAdmin();
      }

      /* -------- job timecards -------- */
      match /timecards/{timecardId} {
        function isOwnerOfDoc() {
          return signedIn() && resource.data.uid == request.auth.uid;
        }

        function fieldsUnchanged() {
          return request.resource.data.jobId == resource.data.jobId &&
                 request.resource.data.employeeRosterId == resource.data.employeeRosterId &&
                 request.resource.data.uid == resource.data.uid;
        }

        allow read: if signedIn();

        // Admins can manage any timecard
        allow create, update, delete: if isAdmin();

        // Non-admin creation: must be owner and draft status
        allow create: if signedIn() && request.resource.data.uid == request.auth.uid &&
                      request.resource.data.status == 'draft';

        // Non-admin updates: only while draft; status may change to 'submitted'
        allow update: if signedIn() && isOwnerOfDoc() && resource.data.status == 'draft' && fieldsUnchanged() &&
                      (request.resource.data.status == 'draft' || request.resource.data.status == 'submitted');
      }
    }

    /* ---------------- daily logs (legacy, flat collection) ---------------- */
    match /dailyLogs/{logId} {
      allow get, list, read: if signedIn();

      allow create: if signedIn() && request.resource.data.uid == request.auth.uid && 
                    request.resource.data.status == 'draft';

      allow update: if signedIn() && resource.data.uid == request.auth.uid && 
                    resource.data.status == 'draft';

      allow delete: if isAdmin();
    }

    /* ---------------- timecards (dev) ---------------- */
    match /timecards/{timecardId} {
      // Legacy flat collection (kept for migration)
      allow read, write: if signedIn();
    }

    /* ---------------- nested timecards by week ---------------- */
    match /jobs/{jobId}/weeks/{weekStart}/timecards/{employeeId} {
      // Group timecards by job and week, one doc per employee

      function isOwnerOfDoc() {
        return signedIn() && resource.data.uid == request.auth.uid;
      }

      function fieldsUnchanged() {
        // Immutable identifiers cannot be altered by non-admins
        return request.resource.data.jobId == resource.data.jobId &&
               request.resource.data.employeeId == resource.data.employeeId &&
               request.resource.data.weekStart == resource.data.weekStart &&
               request.resource.data.weekEnding == resource.data.weekEnding &&
               request.resource.data.uid == resource.data.uid;
      }

      function withinWeek() {
        // Requires service to populate weekStartTs/weekEndTs
        return resource.data.weekStartTs != null && resource.data.weekEndTs != null &&
               request.time >= resource.data.weekStartTs &&
               request.time <= resource.data.weekEndTs;
      }

      allow read: if signedIn();

      // Admins can manage any timecard, any week
      allow create, update, delete: if isAdmin();

      // Non-admin creation: must be owner, draft status, and within current week window
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid &&
                    request.resource.data.status == 'draft' &&
                    request.resource.data.employeeId == employeeId &&
                    request.resource.data.jobId == jobId && withinWeek();

      // Non-admin updates: only while draft, within week, immutable fields unchanged; status may change to 'submitted'
      allow update: if signedIn() && isOwnerOfDoc() && isDraft() && withinWeek() && fieldsUnchanged() &&
                    (request.resource.data.status == 'draft' || request.resource.data.status == 'submitted');
    }

    /* ---------------- shop catalog (items with categories) ---------------- */
    match /shopCatalog/{itemId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    /* ---------------- shop categories (hierarchical) ---------------- */
    match /shopCategories/{categoryId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- shop orders (DEV - simplified) ---------------- */
    match /shopOrders/{orderId} {
      // For now, allow all signed-in users to read/write shop orders
      // (like dailyLogs). Rules can be tightened later when stable.
      allow read, write: if signedIn();
    }

    /* ---------------- nested shop orders by job ---------------- */
    match /jobs/{jobId}/shop_orders/{orderId} {
      // Allow signed-in job members to read and write shop orders for their job
      allow read: if signedIn();
      allow create, update, delete: if signedIn() && isAdmin();
    }

    /* ---------------- employees ---------------- */
    match /employees/{employeeId} {
      // Foremen and admins need to read employees for timecards/assignments
      allow read: if signedIn();

      // Only admins can create/update/delete employees
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- default deny ---------------- */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
